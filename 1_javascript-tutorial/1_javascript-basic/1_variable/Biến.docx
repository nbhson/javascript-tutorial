var \f4\lang1108\u3732?\u3785?\u3762?\u3737?\u3751?\u3764?\u3722?\u3762?\u3713?\u3762?\u3737?\f5  \f0\lang1033 = '...'; // ti\f1\lang1066\u7871?ng Ph\f0\lang1033\'e1p\par
var \f6\lang1094\u2596?\u2581?\u2600?\u2624?\u2581?\u2624? = '...'; // \f0\lang1033 ti\f1\lang1066\u7871?ng L\f0\lang1033\'e0o\par
